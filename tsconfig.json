{
  "compilerOptions": {
    "target": "ES6",
    "allowJs": true,
    "checkJs": false,
    "module": "esnext",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "baseUrl": ".",
    "outDir": "dist",
    "lib": ["es2022"],
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "types": ["node"],
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["./dist", "./node_modules"]
}
